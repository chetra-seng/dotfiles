##############
#### NOTE ####
##############
# CTRL keys are commonly asscoiated with moving windows commands
# ALT keys are commonly asscoiated with focusing windows commands

# Open most used apps
alt - q : open -n -a Ghostty
alt - w : open -n -a Zen
alt - e : open -a Finder

# Switch workspace
alt - 1 : yabai -m space --focus 1
alt - 2 : yabai -m space --focus 2
alt - 3 : yabai -m space --focus 3
alt - 4 : yabai -m space --focus 4
alt - 5 : yabai -m space --focus 5
alt - 6 : yabai -m space --focus 6
alt - 7 : yabai -m space --focus 7
alt - 8 : yabai -m space --focus 8
alt - 9 : yabai -m space --focus 9
alt - 0 : yabai -m space --focus 10

# Move workspace to next or prev
shift + alt - p : yabai -m space --move prev; sketchybar --update
shift + alt - n : yabai -m space --move next; sketchybar --update
shift + alt - d : yabai -m space --destroy
shift + alt - c : yabai -m space --create

# Focus window
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - h : yabai -m window --focus west
alt - l : yabai -m window --focus east
alt - r : yabai -m space --rotate 270
alt - t : yabai -m window --toggle float
alt - p : yabai -m window --toggle sticky

# Focus desktop screen
shift + alt - k : yabai -m display --focus north
shift + alt - j : yabai -m display --focus south
shift + alt - h : yabai -m display --focus west
shift + alt - l : yabai -m display --focus east

# Move window to desktop screen
ctrl + alt - k : yabai -m window --display north --focus
ctrl + alt - j : yabai -m window --display south --focus
ctrl + alt - h : yabai -m window --display west --focus
ctrl + alt - l : yabai -m window --display east --focus

# Miror windows
shift + alt - x : yabai -m space --mirror x-axis
shift + alt - y : yabai -m space --mirror y-axis

# Move windows to any spaces
ctrl - 1 : yabai -m window --space 1 --focus; sketchybar --update
ctrl - 2 : yabai -m window --space 2 --focus; sketchybar --update
ctrl - 3 : yabai -m window --space 3 --focus; sketchybar --update
ctrl - 4 : yabai -m window --space 4 --focus; sketchybar --update
ctrl - 5 : yabai -m window --space 5 --focus; sketchybar --update
ctrl - 6 : yabai -m window --space 6 --focus; sketchybar --update
ctrl - 7 : yabai -m window --space 7 --focus; sketchybar --update
ctrl - 8 : yabai -m window --space 8 --focus; sketchybar --update
ctrl - 9 : yabai -m window --space 9 --focus; sketchybar --update
ctrl - 0 : yabai -m window --space 10 --focus; sketchybar --update
